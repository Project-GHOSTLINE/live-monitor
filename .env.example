# Database - Local (SQLite)
DATABASE_PATH=./data/monitor.db

# Database - Production (Supabase)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Translation APIs (optional - choose one or both)
DEEPL_API_KEY=your_deepl_key_here
GOOGLE_TRANSLATE_API_KEY=your_google_key_here

# API Security
CRON_SECRET=random_secure_string_for_cron_jobs

# App Config
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_MAX_ITEMS_PER_PAGE=50

# Feature Flags
STATE_ENABLED=true
CCE_ENABLED=false  # Conflict Core Engine v1 (set to true to use CCE for state calculations)
CCE_V2_ENABLED=false  # Conflict Core Engine v2 (requires CCE_ENABLED=true)
# CCE v2 adds: momentum/pressure/instability metrics, theatre aggregation,
#              alliance pressure propagation, and front-line tactical system
